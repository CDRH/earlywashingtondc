.map_container {
  border: solid 5px #aaa;
  border-right: none;
  border-left: none;
}

.map_container_key {
  background: #fff;
}

.map_container_key_nav {
  background-color: #e8e8e8;
  & .nav-tabs > li.active > a, 
  & .nav-tabs > li.active > a:hover, 
  & .nav-tabs > li.active > a:focus {
    background-color: #fff;
  }
}

#map {
  height: 100%;
}

@media only screen and (max-width: 699px) {
  .map_container_map {
    height: 79vh;
  }
}

@media only screen and (min-width: 700px) {

  .map_container {
    height: 79vh;
    display: flex; // children are .map_container_map and .map_container_key
    & .nav-tabs > li > a {
      padding: .4em;
      font-size: .9em;
    }
  }

  .map_container_map {
    // width: 75vw;
    flex: 1;
  }

  .map_container_key {
    width: 17em;
    display: flex;
    flex-direction: column;
  }

  .tab-content {
    font-size: .9em;
    height: 95%;
    line-height: 1.15em;
    overflow: scroll;
    overflow-x: hidden; //must come after overflow
    overflow-y: auto;

    & ul, & li {
      padding: 0;
    }

    h3 {
      font-size: 1.4em;
      margin: 0 0 .5em 0;
      padding: 0;
    }
  }
}

.leaflet-popup-content {
  h2 {
    font-size: 2em;
    margin: 0 0 .2em 0;
    padding:0;
  }
  ul {
    padding: 0;
  }
}

.directory-example {
  height: auto;
  width: 100%;
}

.marker_popup ul {
  list-style: none;
}

.marker_cluster {
  background-color: white;
  border: 1px solid black;
  border-radius: 50%;
  color: black;
  opacity: .85;
  text-align: center;
};

