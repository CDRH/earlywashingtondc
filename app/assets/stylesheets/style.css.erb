/* CSS By Karin Dalziel and Kaci Nash */

/* ==================================
Sitewide/basic HTML
=====================================*/

#wrapper {
	padding-top: .3em;
}

.container {
	background-color: #fff;
	/*box-shadow: 0 9px 0px 0px #fff, 
  	0 -9px 0px 0px #fff, 
  	0px 0 15px -4px #888, 
  	-0px 0 15px -4px #888;*/
  	
	/* This box shadow is an attempt to have a shadow and work with multiple containers http://stackoverflow.com/questions/11997032/how-to-get-box-shadow-on-left-right-sides-only */
}

/* Links */

.main_content a {
	border-bottom: solid 1px #5A8597;
}

.main_content a:hover {
	border-bottom: solid 1px #a51400;
}

/* Content of Cases / Documents */

.body ul {
	list-style: none;
}

/* Tables */

table {
	margin-left: auto;
	margin-right: auto;
	width: 100%;
}

table td {
	border: 1;
	padding: 5px 5px;
	padding-right: 25px;
}

/* Other HTML */

.hr {
	border: none;
	border-top: solid 1px #aaa;
	display: block;
	height: 1px;
	margin: 10px 0;
}

.hidden {
	display: none;
}

.unhidden {
	display: block;
}

/* Search Results Facet Styling */

.no-facet-results {
	display: none !important;
}

/* Added padding to the bottom to make anchors work better, nut not on small screens */

@media (min-width: 768px) {
	body {
		padding: 0 0 400px 0;
	}
}

/* Footnotes */

.foot {
	font-size: .7em;
	vertical-align: super;
	line-height: 1em;
    margin-left: 2px;
}

.foot a {
	text-decoration: none;
	border: none;
}

.footnotes {
	font-size: .9em;
}

.note {
	margin-top: 25px;
    padding-top: 5px;
    border-top: 1px solid #000;
    font-size: .8em;
}

/* Tooltips and switch boxes */

#tooltip {
	position: absolute;
	z-index: 9999;
	color: #000;
	font-size: .9em;
	background-color: #fff;
	border: 1px solid #aaa;
	text-decoration: none;
	font-weight: normal;
	font-style: normal;
	padding: 10px;
	text-align: left;
	-moz-box-shadow: 5px 5px 5px #aaa;
	-webkit-box-shadow: 5px 5px 5px #aaa;
	box-shadow: 5px 5px 5px #aaa;
	line-height: 1.4;
	max-width: 400px;
}

#tooltip.inlinenote {
	max-width: 400px !important;
}

a #tooltip {
	text-decoration: none;
}

div#regularized_text_switch_box {
	font-style: italic;
	color: #b33f2d;
	border: 1px #aaa solid;
	padding: 10px;
	margin: 5px -11px 5px -11px;
	background-color: #ececec;
	display: block;
	text-decoration: none;
}

div#regularized_text_switch_box a {
	text-decoration: none;
}

div#switch_box {
	font-style: italic;
	border: 1px #aaa solid;
	padding: 10px;
	margin: 0 0 10px 0;
	background-color: #ececec;
	display: block;
	text-decoration: none;
}


/* Letter Pagination */

.letter_pagination {
	margin: 0;
	padding: 0;
	list-style: none;
	vertical-align: top;
	line-height: 1em;
}

.letter_pagination li {
	display: inline-block;

}

.letter_pagination li a {
	display: inline-block;
	/*vertical-align: top;*/
	float:left;
	height: 2.5em;
	padding: .2em .2em .2em .2em;
	width: 2.05em;
	margin-bottom: .2em;
	text-align: center;
	border: 1px solid #ddd;
	display: inline-block;
	border-radius: 2px;
}

.letter_pagination li a:hover {
	background-color: #6b96a5;
	color: #fff;
}

.letter_pagination li a span {
	display: block;
	font-size: .7em;
}

.main_alpha_menu  .letter_pagination {
	text-align: center;
}

.browse_alpha_menu .letter_pagination li a {
	width: 3.2em;
	font-size: 1.1em;
}

.browse_alpha_menu .letter_pagination {
	line-height: 1.2em;
}


