<h3>Your search for: "<%= query_display %>" returned <%= @docs[:num_found] %> results</h3>

<div class="callout">
  <p>
    <b>Sort results by: 
      <%= link_to "Case", search_url(sort_results("title")), :class => selected?("title") %>
      <%= link_to "Document Type", search_url(sort_results("subtype")), :class => selected?("subtype") %>
      <%= link_to "Date", search_url(sort_results("date")), :class => selected?("date") %>
    </b>
  </p>
</div>

<ul>
  <% @docs[:docs].each do |doc| %>
    <li>
      <%= link_to "#{doc["title"]} (#{doc["dateNormalized"]})", doc_path(doc["id"]) %>
    </li>
  <% end %>
</ul>