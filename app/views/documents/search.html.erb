<h3>Your search for: "<%= query_display %>" returned <%= @docs[:num_found] %> results</h3>

<% if @docs[:docs].length > 0 %>
  <div class="jump_pagination">Jump to Page 
  <%= form_tag search_path(reset_params) do %>
    <%= paginator %>
  <% end %>
  of results</div>

  <div class="callout">
    <p>
      <b>Filter Results: 
        <%= link_to "Case", search_path(facet_results("caseid")), :class => selected_facet?("caseid") %>
        <%= link_to "Person", search_path(facet_results("person")), :class => selected_facet?("person") %>
        <%= link_to "Case Document", search_path(facet_results("document")), :class => selected_facet?("document") %>
      </b>
    </p>
  </div>

  <div class="callout">
    <p>
      <b>Sort results by: 
        <%= link_to "Alphabetical", search_path(sort_results("title")), :class => selected_sort?("title") %>
        <%= link_to "Date", search_path(sort_results("date")), :class => selected_sort?("date") %>
        <%= link_to "Relevance", search_path(sort_results("score")), :class => selected_sort?("score") %>
        <%# link_to "Document Type", search_path(sort_results("subCategory")), :class => selected_sort?("subCategory") %>
      </b>
    </p>
  </div>

  <ul>
    <% @docs[:docs].each do |doc| %>
      <li>
        <%= link_to "#{doc["title"]} (#{doc["dateDisplay"]})", doc_path(doc["id"]) %>
      </li>
    <% end %>
  </ul>
<% end %>