<script type="text/javascript">
    function unhide(divID) {
    var item = document.getElementById(divID);
    if (item) {
    item.className=(item.className=='hidden')?'unhidden':'hidden';
    }
    }
</script>

<h2><%= @doc["title"] %></h2>

<!-- metadata top -->
<div class="callout bibliography" id="topBibl">
  <p><strong>Document: </strong><%= @doc["title"] %></p>
  <p><strong>Date: </strong><%= @doc["dateDisplay"] %></p>

  <%= metadata_mult("People", @doc["people"], "people") %>
  <%= metadata_mult("Term", @doc["term_ss"], "term_ss") %>
  <%= metadata_mult("Plaintiff", @doc["plaintiff_ss"], "plaintiff_ss") %>
  <%= metadata_mult("Defendant", @doc["defendant_ss"], "defendant_ss") %>

  <p>
    <%# link_to "View Case File", search_path(:qfield => "caseID", :qtext => @doc["caseID"]) %>
    <!-- TODO: Fix the link to caseid, Karin broke it :( -->
    <%# link_to "View Case File", case_path(@doc["caseID_ss"]) %>
  </p>
  <span class="morelink">
    <a href="#bottomBibl">More metadata</a>
  </span>
</div>

<!-- TODO this will be pulled via...template? -->
<%# @doc["text"] %>
<%= @res.html_safe %>

<!-- metadata bottom -->


<div class="callout bibliography" id="bottomBibl">
  <p><strong>Category: </strong>
    <span class="subjectLink">
      <%= link_to @doc["category"], search_path(:qfield => "category", :qtext => @doc["category"]) %>
    </span>
  </p>
  <p><strong>Subcategory: </strong>
    <span class="subjectLink">
      <%= link_to @doc["subCategory"], search_path(:qfield => "subCategory", :qtext => @doc["subCategory"]) %>
    </span>
  </p>
  <%= metadata_mult("Attorney for Plaintiff", @doc["attorneyP_ss"], "attorneyP_ss") %>
  <%= metadata_mult("Attorney for Defendant", @doc["attorneyD_ss"], "attorneyD_ss") %>
  <%= metadata_mult("People", @doc["people"], "people") %>
  <%= metadata_mult("Places", @doc["places"], "places") %>
  <p><strong>TEI/XML: </strong>
    <a href="<%= @doc['uriXML'] %>"><%= @doc['uriXML'] %></a>
  </p>
  <span class="morelink">
    <a href="#topBibl">Back to top</a>
  </span>
</div>