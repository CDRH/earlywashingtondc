<h1><%= @person["title"]%></h1>

<div class="callout bibliography" id="topBibl">
  <p><strong>Date of Birth:</strong> <%= @person["personBirth_ss"] %></p>
  <p><strong>Date of Death:</strong> <%= @person["personDeath_ss"] %></p>
  <p><strong>Occupation:</strong> <%= @person["personOccupation_ss"] %></p>
  <p><strong>Sex:</strong> <%= @person["personSex_ss"] %></p>
  <p><strong>Color:</strong> <%= @person["personColor_ss"] %></p>
  <p><strong>VIAF:</strong> <%= @person["personIdnoVIAF_ss"] %> </p>
</div>

<h3>Relationships:</h3>
<ul>
<%# TODO clean this huge mess up %>
<% @rdfresults["results"]["bindings"].each do |rel| %>
  <% label = rel["rel1"]["value"].partition('#').last.titleize + " " +rel["name1"]["value"] %>
  <li><%= link_to label, person_path(rel["per1"]["value"].partition('#').last) %></li>
<% end %>
</ul>
<p>

<h3><%= @docs[:num_found] %> Documents: </h3>
<ul>
<% @docs[:docs].each do |doc| %>
  <li><%= link_to doc["title"], doc_path(doc["id"]) %></li>
<% end %>
</ul>